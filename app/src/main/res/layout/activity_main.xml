<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">
        
        <Button
            android:id="@+id/mainActivityButtonRojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pegar fragment rojo"/>

        <Button
            android:id="@+id/mainActivityButtonVerde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pegar fragment verde"/>

        <Button
            android:id="@+id/mainActivityButtonAzul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pegar fragment azul"/>



    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/mainActivityFrameLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

    </FrameLayout>

</LinearLayout>